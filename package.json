{
  "name": "angular2-starter",
  "version": "1.0.0",
  "description": "A webpack starter for Angular2",
  "author": "lxp",
  "scripts": {
    "clean": "rimraf dist",
    "start": "yarn run clean && cross-env NODE_ENV=development babel-node scripts/server.js",
    "start:dll": "yarn run dll && yarn start",
    "start:proxy": "yarn run clean && cross-env NODE_ENV=development PROXY=true babel-node scripts/server.js",
    "build": "yarn run clean && cross-env NODE_ENV=production webpack --config scripts/webpack.config.prod.js --progress --hide-modules",
    "release": "yarn run build && babel-node scripts/server.js",
    "release:proxy": "cross-env PROXY=true yarn run build && babel-node scripts/server.js",
    "deploy": "yarn run build && gulp upload",
    "dll": "rimraf dll && webpack --config scripts/webpack.config.dll.js  --progress --hide-modules",
    "postinstall": "typings install && yarn run dll"
  },
  "license": "MIT",
  "dependencies": {
    "@angular/common": "^5.1.3",
    "@angular/compiler": "^5.1.3",
    "@angular/core": "^5.1.3",
    "@angular/forms": "^5.1.3",
    "@angular/http": "^5.1.3",
    "@angular/platform-browser": "^5.1.3",
    "@angular/platform-browser-dynamic": "^5.1.3",
    "@angular/router": "^5.1.3",
    "core-js": "^2.4.1",
    "reflect-metadata": "^0.1.8",
    "rxjs": "^5.0.0-beta.12",
    "zone.js": "^0.8.19"
  },
  "devDependencies": {
    "@angularclass/hmr": "^2.1.3",
    "@angularclass/hmr-loader": "^3.0.2",
    "add-asset-html-webpack-plugin": "^2.1.2",
    "angular2-template-loader": "^0.6.2",
    "autoprefixer": "^7.2.4",
    "awesome-typescript-loader": "^3.4.1",
    "babel-cli": "^6.26.0",
    "body-parser": "^1.15.2",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.8",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.6",
    "gulp": "^3.9.1",
    "gulp-ssh": "^0.6.0",
    "html-loader": "^0.5.4",
    "html-webpack-plugin": "^2.22.0",
    "json-loader": "^0.5.4",
    "less": "^2.7.1",
    "less-loader": "^4.0.5",
    "open": "0.0.5",
    "postcss-loader": "^2.0.10",
    "precss": "^2.0.0",
    "rimraf": "^2.5.4",
    "style-loader": "^0.19.1",
    "to-string-loader": "^1.1.5",
    "typescript": "^2.0.3",
    "typings": "^2.1.1",
    "url-loader": "^0.6.2",
    "webpack": "^3.10.0",
    "webpack-dev-middleware": "^2.0.4",
    "webpack-hot-middleware": "^2.12.2",
    "webpack-merge": "^4.1.1"
  }
}
